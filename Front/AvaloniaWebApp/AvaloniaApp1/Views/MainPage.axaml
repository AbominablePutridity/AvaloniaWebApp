<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Views.MainPage">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="4*"/>
          <RowDefinition Height="4*"/>
          <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>  
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="50"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="SearchTB" Grid.Row="0" Grid.Column="0" Margin="5" Grid.ColumnSpan="3" />
        <Button Content="EnterB" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Click="Button_Click_Enter"/>

        <Button Content="&lt;" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3"/>
        <Button Content="&gt;" Grid.Column="4" Grid.Row="1" Grid.RowSpan="3"/>

        <Grid Background="Gray" Grid.Row="1" Grid.Column="1" Margin="5">
            <TextBlock x:Name="TBlock" HorizontalAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" /> 
        </Grid>

        <Grid Background="Gray" Grid.Row="1" Grid.Column="2" Margin="5">
            <TextBlock x:Name="TBlock2" HorizontalAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" /> 
        </Grid>

        <Grid Background="Gray" Grid.Row="1" Grid.Column="3" Margin="5">
            <TextBlock x:Name="TBlock3" HorizontalAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" /> 
        </Grid>

      </Grid>

</UserControl>
